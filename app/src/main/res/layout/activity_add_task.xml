<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".AddTask" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="EXIT" android:layout_alignParentBottom="false" android:layout_alignParentRight="false" android:id="@+id/btnReturnHome"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="SAVE" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:id="@+id/btnSaveTask" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" android:text="Add Task Page" android:id="@+id/textView2" android:layout_marginEnd="8sp" android:textStyle="bold" android:textSize="30sp" android:layout_marginTop="-3dp" android:layout_marginStart="8dp" android:layout_centerHorizontal="true" android:layout_below="@+id/btnReturnHome"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Title" android:id="@+id/textView" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="100sp" android:layout_marginStart="40sp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="216dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtTitleTask" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="9dp" android:layout_marginStart="1dp" android:layout_below="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.181" android:hint="Enter Title" android:layout_alignStart="@+id/txtDescriptionTask"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Description" android:id="@+id/textView3" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="150sp" android:layout_marginStart="40sp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="218dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtDescriptionTask" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="145sp" android:layout_marginStart="83dp" app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.181" android:hint="Enter Title" android:layout_toEndOf="@+id/textView"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Date" android:id="@+id/textView4" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="205sp" android:layout_marginStart="40sp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btnDateTaskObject" android:textSize="15sp" android:layout_marginTop="20dp" android:layout_marginStart="88dp" android:layout_below="@+id/txtDescriptionTask" android:hint="Select Date" android:layout_toEndOf="@+id/textView"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Start Time" android:id="@+id/textView9" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="255sp" android:layout_marginStart="40sp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btnTimePickStart" android:layout_marginTop="250dp" android:layout_marginStart="25dp" android:hint="Select Start Time" android:layout_toEndOf="@+id/textView9" android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="End Time" android:id="@+id/textView8" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="305sp" android:layout_marginStart="40sp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btnTimePickEnd" android:layout_marginTop="300dp" android:layout_marginStart="25dp" android:hint="Select End Time" android:layout_toEndOf="@+id/textView9" android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Location" android:id="@+id/textView7" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="355sp" android:layout_marginStart="40sp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="209dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtLocationTask" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="14sp" android:layout_marginTop="350sp" android:layout_marginStart="83dp" app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.181" android:hint="Enter Location (optional)" android:layout_toEndOf="@+id/textView"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Shareable" android:id="@+id/textView5" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="405sp" android:layout_marginStart="40sp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:text="Category" android:id="@+id/textView6" android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="455sp" android:layout_marginStart="40sp"/>

</RelativeLayout>